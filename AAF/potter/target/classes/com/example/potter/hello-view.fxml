<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.potter.HelloController">
   <children>
      <ListView fx:id="lvCharacters" onMousePressed="#list" prefWidth="300.0" />
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Index:" />
                  <Label fx:id="lbIndex" textFill="BLUE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Label>
                  <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#onRandom" text="Random" />
               </children>
            </HBox>
            <ImageView fx:id="characterImg" fitHeight="500.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="lbName" alignment="CENTER" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</HBox>
