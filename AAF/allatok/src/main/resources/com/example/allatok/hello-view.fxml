<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.allatok.HelloController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Fájl">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onMegnyitas" text="Megnyitás" />
                  <MenuItem mnemonicParsing="false" onAction="#onKilepes" text="Kilépés" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Súgó">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onNevjegy" text="Névjegy" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox>
         <children>
            <ListView fx:id="lvLista" prefHeight="300.0" prefWidth="250.0" />
            <VBox prefHeight="200.0" prefWidth="100.0" />
         </children>
      </HBox>
   </children>
</VBox>
